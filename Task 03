/* Task 3. Write a program that finds the biggest of three integers using nested if statements.*/


using System;
using System.Linq;
class BigestOfTreeInt
{
    static void Main()
    {
        Console.Title = "BigestOfTreeInt";

        Console.WriteLine("Enter Tree Integer Numbers:");
        Console.WriteLine(new string('-', 33));
        int firstNum = int.Parse(Console.ReadLine());
        int secondNum = int.Parse(Console.ReadLine());
        int thirdNum = int.Parse(Console.ReadLine());
        Console.WriteLine(new string('-',33));
        if ((firstNum >= secondNum && firstNum >= thirdNum))
        {
            Console.WriteLine("{0} is the bigest integer.", firstNum);
        }
        else if (secondNum >= firstNum && secondNum >= thirdNum)
        {
            Console.WriteLine("{0} is the bigest integer.", secondNum);
        }
        else
        {
            Console.WriteLine("{0} is the bigest integer.", thirdNum);
        }
        Console.WriteLine();
    }
}
